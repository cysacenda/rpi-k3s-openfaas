const { Pool, Client } = require('pg')
const connectionString = 'postgresql://docker:docker@localhost:3211/docker'
const client = new Client({
  connectionString: connectionString,
})
client.connect()

var http = require("http");
var server = http.createServer(function(req, res) {
	// callback
	client.query('SELECT * from account', (err, res) => {
	  if (err) {
		console.log(err.stack)
		res.end(err.stack)
	  } else {
		console.log("ok 2")
		str1 = res.rows[0] + " - " + res.rows[1] + " - " + res.rows[2]
		res.end("Coucou depuis Docker mon ptit Cyril !!! " + str1);
	  }
	})
});

server.listen(3000);

